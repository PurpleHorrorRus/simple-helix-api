{
    "compileOnSave": true,

    "compilerOptions": {
        "target": "es2020",
        "module": "CommonJS",
        "rootDir": "./src",
        "declarationDir": "./types",
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true
    },

    "exclude": [
        "node_modules"
    ],

    "files": [
        "src/index.ts"
    ]
}